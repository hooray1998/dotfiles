" FileFormat ================================= "
command! Format :call FileFormat()
func FileFormat() 
	if &filetype == 'python' 
		exec "!python ~/.local/config/FormatPython.py %"
	endif
endfunc 

" Highlight ================================= "
command! HighLight :call HighLight()
nnoremap <C-H> :call HighLight()<CR>
func  HighLight() 
	if &filetype == 'python' 
		exec "!pygmentize -f html -o % %"
	endif
	. normal ggdstVGd
endfunc 

